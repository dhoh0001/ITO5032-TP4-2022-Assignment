@model IEnumerable<ITO5032_Assignment.Models.Booking>

@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Bookings</h2>

<p>
    <a href="/Bookings/Create" class="btn btn-default">Create New</a>
    <a href="/Bookings/UserBooking" class="btn btn-default">Make Booking</a>
    <a href="/Bookables/ServiceProviderBookable" class="btn btn-default">Service provider bookables</a>
    <a href="/Bookables/RoomBookable" class="btn btn-default">Room Bookables</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.start_datetime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_datetime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bookable_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.start_datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_datetime)
        </td>
        <td>
            @item.User.first_name
            @item.User.last_name
        </td>
        <td>
            @item.Bookable.name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
