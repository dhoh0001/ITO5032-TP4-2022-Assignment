@model PagedList.IPagedList<ITO5032_Assignment.Models.Booking>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Bookings</h2>

<p>
    <a href="/Bookings/Create" class="btn btn-default">Create New</a>
    <a href="/Bookings/UserBooking" class="btn btn-default">Make Booking</a>
    <a href="/Bookables/ServiceProviderBookable" class="btn btn-default">Service provider bookables</a>
    <a href="/Bookables/RoomBookable" class="btn btn-default">Room Bookables</a>
</p>
@using (Html.BeginForm("Index", "AppUsers", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Start Date time", "Index", new { sortOrder = ViewBag.RoleSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            End Date time
        </th>
        <th>
            @Html.ActionLink("User", "Index", new { sortOrder = ViewBag.RoleSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Bookable
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.start_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_datetime)
            </td>
            <td>
                @item.User.first_name
                @item.User.last_name
            </td>
            <td>
                @item.Bookable.name
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))